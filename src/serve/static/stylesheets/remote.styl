@import "nib"

@import "includes/ui"
@import "includes/base"

if theme is "light"
  @import "includes/light"
else
  @import "includes/dark"

pixelated()
  image-rendering optimizeSpeed             /* Legal fallback */
  image-rendering -moz-crisp-edges          /* Firefox        */
  image-rendering -o-crisp-edges            /* Opera          */
  image-rendering -webkit-optimize-contrast /* Safari         */
  image-rendering optimize-contrast         /* CSS3 Proposed  */
  image-rendering crisp-edges               /* CSS4 Proposed  */
  image-rendering pixelated                 /* CSS4 Proposed  */
  -ms-interpolation-mode nearest-neighbor   /* IE8+           */

body
  background-color #252F3B
  color #9CA3AB

a
  color #2F81FF
  text-decoration none

#devkit
  height 100%
  width 100%
  overflow hidden

  #remote
    height 100%
    width 100%
    overflow hidden

    #contents
      height 100%
      width 100%
      display flex
      align-items center
      flex-direction column
      position relative

      #header
        font-size 30px
        font-weight 300
        margin 40px

      #notConnectedEl
        position relative
        flex-flow column
        width 250px

        #qrcode
          flex 1
          border 20px solid white

          #qr

            img
              pixelated()
              width 100%

        #instruction
          margin-top 5px
          font-size 15px

          .bold
            font-weight 600
          div
            margin-top 15px

      #connectedEl
        position relative
        display flex
        align-items center
        flex-direction column
        width 250px
        font-size 15px

        #deviceImage
          flex 1
          margin 20px
          width 120px

        #deviceName
          flex 2
          color #EDF3F9
          position relative
          width 100%
          text-align center

        #deviceInfo
          flex 3
          display flex
          justify-content space-between
          margin-top 40px
          width 100%
          .left
            flex 1
            display flex
            flex-flow column
            align-items flex-start
          .right
            flex 2
            display flex
            flex-flow column
            align-items flex-end
          .row
            margin-bottom 10px

        #showHideDebuggerBtn
          font-size 15px
          font-weight 300
          border-radius 999px
          padding 10px 30px 10px 30px
          border-color #aaa
          margin-top 50px
          transition background-color 0.1s
          &:not(:hover)
            background-color transparent

      #build-spinner
        position absolute
        top 0px
        left 0px
        width 100%
        height 100%
        opacity 0
        transition all 0.5s
        background rgba(0, 0, 0, 0.8)
        pointer-events none

        display flex
        align-items center
        justify-content center

        #spinner
          transition all 0.5s
          width 40px
          height 40px
          opacity 0
          pointer-events none
          background url(../icons/spinner.png)
          background-size 40px 40px
          background-repeat no-repeat

      &.building
        #build-spinner
          opacity 1

          #spinner
            opacity 1
            animation spin 0.5s linear infinite



@keyframes spin
  100%
    transform rotate(360deg)
